<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/display"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="#8B87F4">


        <ImageButton
            android:id="@+id/drop"
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mainDropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#8B87F4"
        android:visibility="gone">

        <View
            android:layout_width="20dp"
            android:layout_height="0dp"/>

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="#817DE1">


                <ImageButton
                    android:id="@+id/dataDrop"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/data" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/dataDropdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:orientation="vertical"
                android:background="#7976D5"
                android:visibility="gone">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftDropLayout"
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="#7976D5"
                android:visibility="gone">


                <ImageButton
                    android:id="@+id/leftDrop"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/left" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/leftHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:orientation="vertical"
                android:background="#7976D5"
                android:visibility="gone">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rightDropLayout"
                android:layout_width="170dp"
                android:layout_height="20dp"
                android:orientation="horizontal"
                android:background="#7976D5"
                android:visibility="gone">


                <ImageButton
                    android:id="@+id/rightDrop"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:contentDescription="TODO" />

                <TextView
                    android:id="@+id/rightTitle"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:text="@string/right" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rightHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="200dp"
                android:orientation="vertical"
                android:background="#7976D5"
                android:visibility="gone">
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>